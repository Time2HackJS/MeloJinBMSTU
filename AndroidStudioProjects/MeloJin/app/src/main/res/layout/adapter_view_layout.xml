<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#390C0025"
    android:orientation="horizontal"
    tools:context=".activities.MainActivity"
    android:id="@+id/song_layout">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="66"
        android:background="#00FD0303"
        android:gravity="center"
        android:scaleType="centerInside"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:textAlignment="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="34"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom|center|left"
            android:text="Ты кто такой"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/song_artist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/song_artist"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Чтоб это делать"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/song_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        android:scaleX="0.5"
        android:scaleY="0.5" />


</LinearLayout>